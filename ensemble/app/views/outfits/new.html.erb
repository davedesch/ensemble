<h1>Add an outfit.</h1>

<div id="upload_widget_opener">
<button>OPEN SOME FUCKING PICTURES</button>
</div>
<div id="upload_with_instagram"><a href="/instagram/recent"><button >Upload your outfit from Instagram<i class="fa fa-instagram"></i></button></a></div>
<div id="newoutfitthumbnail"></div>
<br>
<%= form_for :outfit, as: :post, url: user_outfits_path do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :description %><br>
  <%= f.text_area :caption, placeholder: "Tell us about your ensemble, don't forget your hashtags!"  %>
</p>

<p>
  <%= f.hidden_field :image_url %>
</p>

<p>
  <% genders = ["Ladies", "Gentlemen", "Doesn't Matter (Unisex)"] %>
  <%= f.select :gender, options_for_select(genders) %>
</p>

<p>
  <%= f.submit 'create your outfit', :id => 'newoutfit'%>
</p>

<% end %>
